<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../public/stylesheets/common.css" />
    <link rel="stylesheet" href="../public/stylesheets/index.css" />
    <%- include('modules/linksHead') %>
    <title>Document</title>
  </head>
  <body class="text-info" style="font-family: 'Orbitron', sans-serif">
    <header><%- include('modules/header.ejs') %></header>

    <a
      class="btn btn-outline-info mt-4"
      href="/game/formGamePlayer/<%= player.id_player %>"
      >Añadir juego de <%= player.name %>
    </a>
    <h1 class="text-center text-info fw-bold mt-4">Perfil de un Usuario</h1>
    <main>
      <section class="user section1">
        <img
          class="form-w img-user"
          src="/images/usuarios/<%= player.img?player.img:'user_por_defecto.png'%>"
          alt=""
        />
        <h2 class="mb-3 mt-5"><%= player.name %> <%= player.last_name %></h2>

        <%= player.email %>

        <p><%= player.description %></p>
      </section>

      <section class="section2">
        <h2 class="text-center">Juegos de <%= player.name %></h2>

        <div class="d-flex flex-wrap gap-4 justify-content-center mt-5">
          <% games.forEach((elem)=>{ %>
          <div class=" " style="width: 18rem">
            <img
              src="/images/games/<%= elem.game_img %>"
              class="card-img-top"
              alt=""
            />
            <div
              class="img-card card-body bord text-info text-center"
              style="font-family: 'Orbitron', sans-serif"
            >
              
              <h5 class=" title-game card-title mb-1"><%= elem.name_game %></h5>
              <p class="card-text"><%= elem.plataform %></p>
              <% let rating = "" %> <% for (let i = 0; i < elem.starrating; i++)
              {%> <% rating += '★' }%>
              <p class="card-text"><%= rating %></p>
              
                <a
                  href="/game/infoGame/<%= elem.id_game %>"
                  class="btn btn-outline-info fw-bold mt-2"
                  >Más info</a
                >
                <a
                  href="/game/editGame/<%= elem.id_game %>"
                  class="btn btn-outline-info fw-bold mt-2"
                  >Editar</a
                >
                <a
                  href="/game/deleteGame/<%= elem.id_game %>/<%= player.id_player %>"
                  class="btn btn-outline-info fw-bold mt-2"
                  >Eliminar</a
                >
            </div>
          </div>
          <% }) %>
        </div>
      </section>
      <a class="btn-up btn btn-outline-info" href="/player/usuario/<%= id_player %>">Subir</a>
    </main>
    <%- include('modules/footer') %>
  </body>
</html>
